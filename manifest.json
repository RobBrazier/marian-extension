{
  "manifest_version": 3,
  "name": "Marian",
  "version": "1.0",
  "description": "Extracts book details from Amazon product pages.",
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "marian.png",
    "32": "marian.png",
    "48": "marian.png",
    "128": "marian.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Get Book Details"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*dp/*",
        "https://www.amazon.com/gp/product/*"
      ],
      "js": ["content.js", "popup.js"]
    }
  ]
}
