{
  "manifest_version": 3,
  "name": "Hardcover Book Extractor",
  "version": "1.0",
  "description": "Extracts book details from Amazon product pages.",
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "icon2.png",
    "32": "icon2.png",
    "48": "icon2.png",
    "128": "icon2.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Get Book Details"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*dp/*",
        "https://www.amazon.com/gp/product/*"
      ],
      "js": ["content.js"]
    }
  ]
}
